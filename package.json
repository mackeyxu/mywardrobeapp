{
  "name": "my-wardrobe",
  "version": "1.0.0",
  "description": "我的智能衣橱应用",
  "main": "index.html",
  "scripts": {
    "build:css": "chmod +x node_modules/.bin/* && tailwindcss -i ./input.css -o ./dist/output.css --minify && copyfiles index.html dist",
    "watch:css": "tailwindcss -i ./input.css -o ./dist/output.css --watch",
    "start": "npm run watch:css"
  },
  "devDependencies": {
    "tailwindcss": "^3.3.2",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "copyfiles": "^2.4.1"
  }
}